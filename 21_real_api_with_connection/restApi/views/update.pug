  body 

    h1 Welcome to home page
    form#updateForm(action=`/updateData/${userData._id}` method="PUT") 
      .card 
        .card-header Login
        label(for="name") Name 
        input(type="text" id="name" value=`${userData.name}` name="name")

        label(for="age") Age 
        input(type="number" id="age" value=`${userData.age}` name="age")

        label(for="gender" class="form-label") Gender 
        select(name="gender" class="form-select")
          option(value="") Select  
          option(value=`${userData.male}`) Male
          option(value=`${userData.female}`) Female
          option(value=`${userData.other}`) Other

        label(for="salary") Salary
        input(type="number" id="salary" value=`${userData.salary}` name="salary")

        button.btn.btn-success(type="submit") Add User
